    <script>
    alert("Welcome to this Page MotherFather")
    function validateForm(event) 
{
    event.preventDefault();

    const firstName = document.getElementById("firstName").value.trim();
    const middleName = document.getElementById("middleName").value.trim();
    const lastName = document.getElementById("lastName").value.trim();
    const dob = document.getElementById("dob").value;
    const email = document.getElementById("email").value.trim();
    const password = document.getElementById("password").value;
    const confirmPassword = document.getElementById("confirmPassword").value;

    const nameRegex = /^[A-Za-z\s]+$/;

    if (!nameRegex.test(firstName)) 
    {
        alert("First name should not contain special characters.");
        return false;
    }
    if (middleName && !nameRegex.test(middleName)) 
    {
        alert ("Middle name should not contain special characters."); 
        return false;
    }
    if (!nameRegex.test(lastName)) 
    {
        alert ("Last name should not contain special characters.");
        return false;
    }
        
    //Vlidate age (must age 21+)
    const today = new Date ();
    const birthDate = new Date (dob);
    let age = today.getFullYear() - birthDate.getFullYear();
    const m = today.getMonth() - birthDate.getMonth();
    if (m < 0 || (m === 0 && today.getDate() < birthDate.getDate())) 
    {
        age--;
    }
    if (age < 21) 
    {
        alert("You must be atleast 21 years old to register.");
        return false;
    }
    //Confirm password match
    if (password !==confirmPassword) 
    {
        alert ("Passwords do nit match.");
        return false;
    }

    //Iff all checks pass
    alert("Registration succesfull!");
    document.getElementById("registrationForm").reset();
    return true;
}
    </script>
